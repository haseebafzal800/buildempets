<header class="section_header1">
  <div class="padding-global">
    <div class="container-large">
      <div class="padding-section-large">
        <div class="w-layout-grid header1_component">
          <div class="header1_content">
            <div class="margin-bottom margin-small">
              <h1 class="heading">
                <span class="text-span-22">{{ section.settings.subheading }}</span><br>
                <span class="text-span-21">{{ section.settings.heading }}</span>
              </h1>
            </div>
            <p class="text-size-medium">{{ section.settings.description }}</p>
          </div>
          {% if section.settings.image != blank %}
            <div class="header1_image-wrapper">
              <img alt="" class="header1_image lazyload hs-lazyload hs-id-d94f767c" data-src="{{ section.settings.image | img_url:'' }}" loading="lazy" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==">
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</header>
{% schema %}
{
  "name": "Image and Text",
  "settings": [
                    {
                      "type":"text",
                      "id": "subheading",
                      "label":"Sub Heading"
                    },
                    {
                      "type":"text",
                      "id": "heading",
                      "label":"Heading"
                    },
                    {
                      "type":"textarea",
                      "id": "description",
                      "label":"Description"
                    },
                    {
                      "type":"image_picker",
                      "id": "image",
                      "label":"Select Image",
                       "info": "Recommended Size: 594 Ã— 542 px"
                    }
              ],
   "presets": [
     {
      "name": "Image and Text"
     }
   ]
}
{% endschema %}

